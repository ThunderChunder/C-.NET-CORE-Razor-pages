@page
@model barter_razor.Pages.ItemList.PostItemModel

<div class="border rounded container shadow" style="margin-top: 7%;">
    <br />
    <h2 class="text-info row justify-content-center">Upload Item To Sell</h2>
    <br />

    <form method="post" class="text-center">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row justify-content-center">
            <div class="col-6">
                <input asp-for="Item.Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Item.Name" class="text-danger"></span>            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-6">
                <input asp-for="Item.Price" class="form-control" placeholder="Price" />
                <span asp-validation-for="Item.Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-6">
                <select asp-for="Item.Category" asp-items="Model.Categories" class="form-control"></select>
                <span asp-validation-for="Item.Category" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-3">
                <input type="submit" value="Upload" class="btn btn-primary form-control">
            </div>
            <div class="col-3" style="padding-bottom: 5%;">
                <a asp-page="Index" class="btn btn-info form-control text-white">Cancel</a>
            </div>
            <span asp-validation-for="Item" class="text-danger"></span>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
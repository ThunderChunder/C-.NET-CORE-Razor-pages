@page
@model barter_razor.Pages.ItemList.IndexModel

<br />

<div class="container row p-0 m-0 border rounded shadow">
    <div class="row col-12 text-center" style="padding-top: 5%;">
        <div class="col-9">
            <h2 class="text-info">Items For Sale</h2>
        </div>
        <div class="col-3">
            <a asp-page="PostItem" class="btn btn-info form-control text-white">Sell Item</a>
        </div>
    </div>

    <div class="col-12 p-3 mt-3">
        <form method="post">
            @if(Model.Items.Count() > 0)
            {
                <table class="table table-striped border rounded">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Items.FirstOrDefault().IdentityUser"></label>
                        </th>
                        <th>
                            <label asp-for="Items.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="Items.FirstOrDefault().Price"></label>
                        </th>
                        <th>
                            <label asp-for="Items.FirstOrDefault().Category"></label>
                        </th>
                    </tr>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(data => item.IdentityUser.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(data => item.Name)
                            </td>
                            <td>
                                $@Html.DisplayFor(data => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(data => item.Category)
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Items currently available</p>
            }
        </form>
    </div>
</div>

